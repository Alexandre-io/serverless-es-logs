{
  "ServerlessEsLogsIAMRole": {
    "Type": "AWS::IAM::Role",
    "DependsOn": [
      "ServerlessEsLogsS3",
      "ServerlessEsLogsLogGroup",
      "EsLogsProcesserLambdaFunction"
    ],
    "Properties": {
      "AssumeRolePolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Principal": {
              "Service": [
                "firehose.amazonaws.com"
              ]
            },
            "Action": [
              "sts:AssumeRole"
            ]
          }
        ]
      },
      "Policies": [
        {
          "PolicyName": {
            "Fn::Join": [
              "-",
              []
            ]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "s3:*"
                ],
                "Resource": [
                  {
                    "Fn::GetAtt": [
                      "ServerlessEsLogsS3",
                      "Arn"
                    ]
                  },
                  {
                    "Fn::Sub": [
                      "${Arn}/*",
                      {
                        "Arn": {
                          "Fn::GetAtt": [
                            "ServerlessEsLogsS3",
                            "Arn"
                          ]
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          }
        },
        {
          "PolicyName": {
            "Fn::Join": [
              "-",
              []
            ]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "es:DescribeElasticsearchDomain",
                  "es:DescribeElasticsearchDomains",
                  "es:DescribeElasticsearchDomainConfig",
                  "es:ESHttpPost",
                  "es:ESHttpPut"
                ],
                "Resource": []
              }
            ]
          }
        },
        {
          "PolicyName": {
            "Fn::Join": [
              "-",
              []
            ]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "logs:*"
                ],
                "Resource": [
                  {
                    "Fn::GetAtt": [
                      "ServerlessEsLogsLogGroup",
                      "Arn"
                    ]
                  }
                ]
              }
            ]
          }
        },
        {
          "PolicyName": {
            "Fn::Join": [
              "-",
              []
            ]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "lambda:InvokeFunction",
                  "lambda:GetFunctionConfiguration"
                ],
                "Resource": [
                  {
                    "Fn::GetAtt": [
                      "ServerlessEsLogsLogGroup",
                      "Arn"
                    ]
                  }
                ]
              }
            ]
          }
        }
      ],
      "Path": "/",
      "RoleName": {
        "Fn::Join": [
          "-",
          []
        ]
      }
    }
  }
}